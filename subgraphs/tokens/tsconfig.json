{	
  "compilerOptions": {
    "declaration": true,	
    "emitDecoratorMetadata": true,	
    "esModuleInterop": true,	
    "experimentalDecorators": true,	
    "importHelpers": true,
    "module": "commonjs",	
    "noImplicitReturns": true,	
    "noUnusedLocals": true,	
    "outDir": "build",
    "resolveJsonModule": true,	
    "sourceMap": true,	
    "strict": true,	
    "target": "esnext",
    "lib": [ "esnext" ],
    "typeRoots": [	
      "./node_modules/@types"	
    ]
  },	
  "compileOnSave": true,	
  "include": [ "./src/**/*.ts" ],	
  "exclude": [
    "build",
    "node_modules",
  ]	
}